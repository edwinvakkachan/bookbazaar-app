<%- include('../partials/admin/header') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css" />
<!-- <link rel="stylesheet" href="/css/category.css"> -->

<body>
  <section class="content-main container-fluid">

    <div class="content-header mb-4">
      <h2 class="content-title card-title">Category</h2>
    </div>

    <!-- Search -->
    <header class="card-header text-center mb-4">
      <form action="/admin/category/" method="get" class="d-flex justify-content-center">
        <div class="input-group input-group-sm" style="max-width: 720px; width: 100%;">
          <input type="text" class="form-control" placeholder="Search categories" name="search" />
          <button class="btn btn-success" type="submit">Search</button>
        </div>
      </form>
    </header>

    <div class="card">
      <div class="card-body">
        <div class="row g-3 align-items-start">
          <!-- Category Creation Form -->
<div class="col-md-3 col-lg-4 col-xl-3">        
      <form method="POST" action="/admin/addCategory" enctype="application/x-www-form-urlencoded" onsubmit="return handleFormSubmit(event)" class="p-3 border rounded-3 shadow-sm bg-white">
              <div class="mb-3">
                <label for="product_name" class="form-label fw-semibold">Name</label>
                <input type="text" name="name" placeholder="Type here" class="form-control" id="product_name" required />
                <div id="name-error" class="error-message text-danger small mt-1"></div>
              </div>

              <div class="mb-3">
                <label class="form-label fw-semibold">Description</label>
                <textarea placeholder="Type here" name="description" class="form-control" id="descriptionId" required></textarea>
                <div id="description-error" class="error-message text-danger small mt-1"></div>
              </div>

              <div class="d-grid">
                <button class="btn btn-primary" type="submit">Create category</button>
              </div>
            </form>
          </div>

          <!-- Category List Table -->
<div class="col-md-9 col-lg-8 col-xl-9 mt-3 mt-md-0">           
   <div class="table-responsive">
              <table class="table table-hover  align-middle">
                <thead class="table-dark">
                  <tr>
                    <th class="text-center" style="width:48px">#</th>
                    <th >Name</th>
                    <th >Description</th>
                    <th class="text-center" style="width:110px">Offer Price</th>
                    <th class="text-center" style="width:170px">Offer</th>
                    <th class="text-center" style="width:110px">Status</th>
                    <th class="text-center" style="width:120px">List/Unlist</th>
                    <th class="text-center" style="width:90px">Edit</th>
                  </tr>
                </thead>
                <tbody>
                  <% cat.forEach((category, index) => { %>
                    <tr>
                      <td class="text-center"><%= index+1 %></td>
                      <td><%= category.name %></td>
                      <td class="text-muted"><%= category.description %></td>
                      <td>-</td>
                      <td class="text-center">
                        <div class="d-inline-flex flex-wrap gap-2">
                          <a href="#" class="btn btn-info btn-sm text-white">Add Offer</a>
                          <a href="#" class="btn btn-warning btn-sm text-white">Remove</a>
                        </div>
                      </td>
                      <td class="text-center">
                        <% if (category.isListed) { %>
                          <span class="badge bg-success">Listed</span>
                        <% } else { %>
                          <span class="badge bg-danger">Unlisted</span>
                        <% } %>
                      </td>
                      <td class="text-center">
                        <% if (category.isListed) { %>
                          <a href="/admin/listCategory?id=<%= category._id %>" class="btn btn-outline-danger btn-sm">Unlist</a>
                        <% } else { %>
                          <a href="/admin/unlistCategory?id=<%= category._id %>" class="btn btn-outline-success btn-sm">List</a>
                        <% } %>
                      </td>
                      <td class="text-center">
                        <a href="/admin/geteditCategory?id=<%= category._id %>" class="btn btn-outline-primary btn-sm">Edit</a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Pagination -->
    <nav class="mt-4">
      <ul class="pagination justify-content-center flex-wrap">
        <% if (currentPage > 1) { %>
          <li class="page-item"><a class="page-link" href="?page=<%= currentPage - 1 %>">&laquo; Previous</a></li>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <li class="page-item"><a class="page-link" href="?page=<%= currentPage + 1 %>">Next &raquo;</a></li>
        <% } %>
      </ul>
    </nav>

  </section>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

  <script>
    async function handleFormSubmit(event) {
      event.preventDefault();
      const name = document.getElementsByName('name')[0].value.trim();
      const description = document.getElementById('descriptionId').value.trim();

      if (!validateForm(name, description)) {
        return false;
      }

      try {
        const response = await fetch('/admin/addCategory', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, description })
        });
        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'Something went wrong');
        }

        console.log('Success:', data);
        location.reload();
      } catch (error) {
        Swal.fire({ icon: 'error', title: 'Oops', text: error.message || 'An error occurred' });
      }
    }

    function validateForm() {
      clearErrorMessages();
      const name = document.getElementsByName('name')[0].value.trim();
      const description = document.getElementById('descriptionId').value.trim();
      let isValid = true;

      if (name === '') {
        displayErrorMessage('name-error', 'Name should not be empty');
        isValid = false;
      } else if (!/^[a-zA-Z\s]+$/.test(name)) {
        displayErrorMessage('name-error', 'Category name should contain only alphabets');
        isValid = false;
      }

      if (description === '') {
        displayErrorMessage('description-error', 'Description should not be empty');
        isValid = false;
      }

      return isValid;
    }

    function displayErrorMessage(elementId, message) {
      const errorElement = document.getElementById(elementId);
      errorElement.innerText = message;
      errorElement.style.display = 'block';
    }

    function clearErrorMessages() {
      const errorElements = document.querySelectorAll('.error-message');
      errorElements.forEach((element) => {
        element.innerText = '';
        element.style.display = 'none';
      });
    }
  </script>

  <%- include('../partials/admin/footer') %>
