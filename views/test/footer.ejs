  <script>
    // Auto-highlight active link if not passed via activePage
    (function() {
      try {
        var path = location.pathname;
        if (!document.querySelector('.nav-link.active, .list-group-item.active')) {
          document.querySelectorAll('.admin-sidebar .nav-link, #mobileSidebar .list-group-item').forEach(function(a){
            var href = a.getAttribute('href');
            if (href && (path === href || path.startsWith(href + '/'))) {
              a.classList.add('active');
            }
          });
        }
      } catch(e) { /* no-op */ }
    })();
  </script>

