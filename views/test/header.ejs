<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'Admin Â· BookBazaar' %></title>

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

  <!-- Your admin CSS -->
  <link rel="stylesheet" href="/css/admin/adminheader.css" />

  <style>
    :root { --sidebar-width: 250px; }
    body { background-color: #f8f9fa; }
    .admin-sidebar { width: var(--sidebar-width); }
    @media (max-width: 991.98px) { .admin-sidebar { display: none; } }
    .nav-link.active, .list-group-item.active {
      background-color: #0d6efd; color: #fff; border-color: #0d6efd;
    }
    .admin-search { max-width: 420px; width: 100%; }
  </style>
</head>
<body>
  <!-- Top Navbar -->
  <nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top">
    <div class="container-fluid px-3">
      <!-- Sidebar toggle for mobile -->
      <button class="btn d-lg-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar">
        <i class="bi bi-list fs-4"></i>
      </button>

      <a class="navbar-brand fw-bold" href="/admin">BOOKBAZAAR</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminTopbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="adminTopbar">
        <!-- Search -->
        <form class="ms-lg-4 my-2 my-lg-0 w-100 d-none d-md-block" role="search" action="<%= typeof searchAction !== 'undefined' ? searchAction : '#' %>">
          <div class="input-group admin-search">
            <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
            <input class="form-control" type="search" placeholder="Search..." name="q" value="<%= typeof q !== 'undefined' ? q : '' %>">
          </div>
        </form>

        <ul class="navbar-nav ms-auto align-items-center gap-2">
          <!-- Notifications (optional) -->
          <li class="nav-item d-none d-md-block">
            <a class="nav-link" href="#"><i class="bi bi-bell"></i></a>
          </li>

          <!-- User dropdown -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
              <span class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center me-2" style="width:36px;height:36px"><i class="bi bi-person"></i></span>
              <span class="d-none d-sm-inline"><%= (admin && admin.name) ? admin.name : 'Admin' %></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li class="px-3 py-2 small">Signed in as<br><strong><%= (admin && admin.email) ? admin.email : 'admin@example.com' %></strong></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/admin/profile"><i class="bi bi-person-gear me-2"></i>Profile</a></li>
              <li><a class="dropdown-item" href="/admin/settings"><i class="bi bi-gear me-2"></i>Settings</a></li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <form action="/admin/logout" method="post" class="m-0">
                  <button class="dropdown-item text-danger" type="submit"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                </form>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row g-0">
      <!-- Sidebar (desktop) -->
      <aside class="admin-sidebar d-none d-lg-block bg-white border-end min-vh-100 p-3">
        <nav class="nav flex-column">
          <a class="nav-link <%= activePage==='dashboard' ? 'active' : '' %>" href="/admin"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
          <a class="nav-link <%= activePage==='customers' ? 'active' : '' %>" href="/admin/customers"><i class="bi bi-people me-2"></i>Customers</a>
          <a class="nav-link <%= activePage==='category' ? 'active' : '' %>" href="/admin/category"><i class="bi bi-grid me-2"></i>Category</a>
          <a class="nav-link <%= activePage==='brands' ? 'active' : '' %>" href="/admin/brands"><i class="bi bi-tags me-2"></i>Brands</a>
          <a class="nav-link <%= activePage==='addProduct' ? 'active' : '' %>" href="/admin/addProducts"><i class="bi bi-plus-square me-2"></i>Add Product</a>
          <a class="nav-link <%= activePage==='products' ? 'active' : '' %>" href="/admin/products"><i class="bi bi-box-seam me-2"></i>Products</a>
          <a class="nav-link <%= activePage==='orders' ? 'active' : '' %>" href="/admin/orders"><i class="bi bi-receipt me-2"></i>Order Lists</a>
          <a class="nav-link <%= activePage==='sales' ? 'active' : '' %>" href="/admin/sales-report"><i class="bi bi-graph-up me-2"></i>Sales Report</a>
          <a class="nav-link <%= activePage==='coupons' ? 'active' : '' %>" href="/admin/coupons"><i class="bi bi-ticket-perforated me-2"></i>Coupons</a>
          <a class="nav-link <%= activePage==='banners' ? 'active' : '' %>" href="/admin/banners"><i class="bi bi-images me-2"></i>Banner Management</a>
          <a class="nav-link <%= activePage==='offers' ? 'active' : '' %>" href="/admin/offers"><i class="bi bi-percent me-2"></i>Offer Management</a>
        </nav>
      </aside>

      <!-- Mobile Sidebar -->
      <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileSidebar">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title">Menu</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body p-0">
          <div class="list-group list-group-flush">
            <a class="list-group-item list-group-item-action <%= activePage==='dashboard' ? 'active' : '' %>" href="/admin"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
            <a class="list-group-item list-group-item-action <%= activePage==='customers' ? 'active' : '' %>" href="/admin/customers"><i class="bi bi-people me-2"></i>Customers</a>
            <a class="list-group-item list-group-item-action <%= activePage==='category' ? 'active' : '' %>" href="/admin/category"><i class="bi bi-grid me-2"></i>Category</a>
            <a class="list-group-item list-group-item-action <%= activePage==='brands' ? 'active' : '' %>" href="/admin/brands"><i class="bi bi-tags me-2"></i>Brands</a>
            <a class="list-group-item list-group-item-action <%= activePage==='addProduct' ? 'active' : '' %>" href="/admin/addProducts"><i class="bi bi-plus-square me-2"></i>Add Product</a>
            <a class="list-group-item list-group-item-action <%= activePage==='products' ? 'active' : '' %>" href="/admin/products"><i class="bi bi-box-seam me-2"></i>Products</a>
            <a class="list-group-item list-group-item-action <%= activePage==='orders' ? 'active' : '' %>" href="/admin/orders"><i class="bi bi-receipt me-2"></i>Order Lists</a>
            <a class="list-group-item list-group-item-action <%= activePage==='sales' ? 'active' : '' %>" href="/admin/sales-report"><i class="bi bi-graph-up me-2"></i>Sales Report</a>
            <a class="list-group-item list-group-item-action <%= activePage==='coupons' ? 'active' : '' %>" href="/admin/coupons"><i class="bi bi-ticket-perforated me-2"></i>Coupons</a>
            <a class="list-group-item list-group-item-action <%= activePage==='banners' ? 'active' : '' %>" href="/admin/banners"><i class="bi bi-images me-2"></i>Banner Management</a>
            <a class="list-group-item list-group-item-action <%= activePage==='offers' ? 'active' : '' %>" href="/admin/offers"><i class="bi bi-percent me-2"></i>Offer Management</a>
          </div>
        </div>
      </div>

      <!-- Main content wrapper starts -->
      <main class="col-lg-10 ms-auto px-3 py-3">
