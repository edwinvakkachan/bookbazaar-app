<%- include("../partials/user/header.ejs") %>
        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-content">
                <h1>SMALL CHANGES,<br>BIG RESULTS</h1>
                <div class="price-tag">₹349 <span class="badge">BEST SELLER</span></div>
                <p>Transform your life with proven strategies and actionable insights from our bestselling collection.</p>
            </div>
            <div class="hero-image">
                <!-- Option 1: Use an actual image -->
                <!-- <img src="images/atomic-habits-cover.jpg" alt="Atomic Habits by James Clear" class="book-cover"> -->
                
                <!-- Option 2: Use a placeholder for now -->
                <div class="book-cover-placeholder">
                    Atomic<br>Habits<br><small>by James Clear</small>
                </div>
            </div>
        </section>

        <!-- Popular Categories -->
        <section>
            <h2 class="section-title">Popular Categories</h2>
            <div class="categories">
                <div class="category-card" style="background: linear-gradient(135deg, #2ecc71, #27ae60);">
                    <h3>Science Books</h3>
                    <p>Explore the wonders of science</p>
                </div>
                <div class="category-card" style="background: linear-gradient(135deg, #3498db, #2980b9);">
                    <h3>Business & Economics</h3>
                    <p>Build your business acumen</p>
                </div>
                <div class="category-card" style="background: linear-gradient(135deg, #e74c3c, #c0392b);">
                    <h3>Arts Books</h3>
                    <p>Discover creative inspiration</p>
                </div>
                <div class="category-card" style="background: linear-gradient(135deg, #9b59b6, #8e44ad);">
                    <h3>Biography</h3>
                    <p>Life stories that inspire</p>
                </div>
            </div>
        </section>

        <!-- Best Selling Books -->
        <section>
            <h2 class="section-title">Best Selling Books</h2>

<div class="bestselling-books">
  <% if (bestSelling && bestSelling.length) { %>
    <% for (let i = 0; i < bestSelling.length; i++) { 
         let p = bestSelling[i];
         let img = (p.productImage && p.productImage.length) ? p.productImage[0] : null;
         let coverStyle = img 
           ? "background-image:url('" + img + "');background-size:cover;background-position:center;"
           : "background: linear-gradient(135deg, #ff9a56, #ff6b35);";
         let effectivePrice = (typeof p.salePrice === 'number' && p.salePrice > 0) ? p.salePrice : p.regularPrice;
         let isDiscount = p.salePrice && p.salePrice < p.regularPrice;
    %>
      <div class="latest-book">
  <div class="latest-book-cover" style="background-image:url('<%= p.productImage[0] %>');"></div>
  <div class="latest-book-info">
    <h4><%= p.productName %></h4>
    <% if (p.brand) { %><p><%= p.brand %></p><% } %>
    <% if (p.category && p.category.name) { %><p><%= p.category.name %></p><% } %>
    <div class="latest-book-price">₹<%= p.salePrice || p.regularPrice %></div>
  </div>
</div>
    <% } %>
  <% } else { %>
    <p>No bestselling books found.</p>
  <% } %>
</div>

        </section>

        <!-- About Us Section -->
        <section class="about-section">
            <h2>ABOUT US</h2>
        </section>

        <!-- Latest Books -->
        <section>

<h2 class="section-title">Latest Books</h2>

<div class="latest-books">
  <% if (products && products.length) { %>
    <% for (let i = 0; i < products.length; i++) { 
         let p = products[i];
         let img = (p.productImage && p.productImage.length) ? p.productImage[0] : null;
         let coverStyle = img 
           ? "background-image:url('" + img + "');background-size:cover;background-position:center;"
           : "background: linear-gradient(135deg, #667eea, #764ba2);";
         let effectivePrice = (typeof p.salePrice === 'number' && p.salePrice > 0) ? p.salePrice : p.regularPrice;
         let isDiscount = p.salePrice && p.salePrice < p.regularPrice;
    %>
      <div class="latest-book">
        <div class="latest-book-cover" style="<%= coverStyle %>"></div>
        <div class="latest-book-info">
          <h4><%= p.productName %></h4>
          <% if (p.brand) { %><p><%= p.brand %></p><% } %>
          <% if (p.category && p.category.name) { %><p><%= p.category.name %></p><% } %>
          <div class="latest-book-price">
            ₹<%= effectivePrice %>
            <% if (isDiscount) { %>
              <span style="margin-left:8px; text-decoration: line-through; opacity: .7;">₹<%= p.regularPrice %></span>
            <% } %>
          </div>
        </div>
      </div>
    <% } %>
  <% } else { %>
    <p>No latest books found.</p>
  <% } %>
</div>


        </section>
   <%- include("../partials/user/footer.ejs") %>