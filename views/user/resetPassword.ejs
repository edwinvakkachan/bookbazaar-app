<%- include("../partials/user/header.ejs") %>

<div class="container d-flex justify-content-center align-items-center" style="min-height:70vh;">
  <div class="col-12 col-md-6 col-lg-4">
    <div class="text-center mb-4">
      <h2 class="fw-bold">Reset Password</h2>
      <p class="text-muted">Enter the OTP sent to your email and set a new password</p>
    </div>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>
    <% if (typeof success !== 'undefined') { %>
      <div class="alert alert-success text-center"><%= success %></div>
    <% } %>

   <form method="POST" action="/resetPassword" id="resetForm">
  <input type="hidden" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>">

  <div class="mb-3">
    <input type="text" name="otp" class="form-control border-0 border-bottom rounded-0 shadow-none"
           placeholder="Enter OTP" >
  </div>
  <div class="mb-3">
    <input type="password" id="password" name="password" class="form-control border-0 border-bottom rounded-0 shadow-none"
           placeholder="New Password" >
  </div>
  <div class="mb-3">
    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control border-0 border-bottom rounded-0 shadow-none"
           placeholder="Confirm Password" >
  </div>

  <div id="passwordError" class="text-danger small mb-2"></div>

  <div class="d-flex justify-content-between align-items-center mt-4">
    <button type="button" id="resendOtpBtn" class="btn btn-link text-dark p-0">Resend OTP</button>
    <button type="submit" class="btn btn-dark px-4">Update Password</button>
  </div>

  <!-- Message placeholder -->
  <div id="resendMessage" class="mt-3"></div>
</form>



  </div>
</div>

<script>
   document.getElementById('resetForm').addEventListener('submit', function (e) {
    const password = document.getElementById('password').value.trim();
    const confirmPassword = document.getElementById('confirmPassword').value.trim();
    const errorBox = document.getElementById('passwordError');

    // Password alteast 6 
    if (password.length < 6) {
      e.preventDefault();
      errorBox.textContent = "Password must be at least 6 characters long.";
      return;
    }

    if (password !== confirmPassword) {
      e.preventDefault();
      errorBox.textContent = "Passwords do not match.";
      return;
    }

    errorBox.textContent = "";
  });

  //message auto hide
  function autoHideAlerts() {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
      setTimeout(() => {
        alert.remove();
      }, 5000);
    });
  }

  autoHideAlerts();




 document.getElementById('resendOtpBtn').addEventListener('click', async (e) => {
    e.preventDefault(); 

    const messageBox = document.getElementById('resendMessage');
    messageBox.innerHTML = '<div class="text-muted">Sending OTP...</div>';

    try {
      const res = await fetch('/forgotPassword/resend', {  
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      });

      if (!res.ok) throw new Error(`Server error: ${res.status}`);

      const data = await res.json();

      if (data.success) {
        messageBox.innerHTML = `<div class="alert alert-success py-2">${data.message}</div>`;
      } else {
        messageBox.innerHTML = `<div class="alert alert-danger py-2">${data.message}</div>`;
      }

      autoHideAlerts();
    } catch (err) {
      console.error('Fetch error:', err);
      messageBox.innerHTML = '<div class="alert alert-danger py-2">Something went wrong. Please try again.</div>';
      autoHideAlerts();
    }
  });


</script>



 <%- include("../partials/user/footer.ejs") %>
