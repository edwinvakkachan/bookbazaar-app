<%- include("../partials/user/header.ejs") %>

<div class="container d-flex justify-content-center align-items-center" style="min-height:70vh;">
  <div class="col-12 col-md-6 col-lg-4">
    <div class="text-center mb-4">
      <h2 class="fw-bold">Forgot Password ?</h2>
      <p class="text-muted">Enter your registered email</p>
    </div>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>
    <% if (typeof success !== 'undefined') { %>
      <div class="alert alert-success text-center"><%= success %></div>
    <% } %>

    <form method="POST" action="/forgotPassword">
      <div class="mb-3">
        <input type="email" name="email" class="form-control border-0 border-bottom rounded-0 shadow-none"
               placeholder="Enter your email">
      </div>
      <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="/login" class="text-decoration-none text-dark">Back to Login</a>
        <button type="submit" class="btn btn-dark px-4">Verify Email</button>
      </div>
    </form>
  </div>
</div>

 <%- include("../partials/user/footer.ejs") %>
